= render partial: "home/navigation_bar"

.alert-box
    -if flash.notice.present?
        .alert.alert-success =flash.notice
    -if flash.alert.present?
        .alert.alert-danger =flash.alert


.container
    .main-title-for-payment.mt-5
        h1.logo Fukuya.

    .breadcrumb-for-payment-wrapper.smaller-font
        ul.breadcrumb-for-payment
            li.picked 
                p カート
            li
                p 
                    | お客様情報<br>入力
            li
                p 決済方法
            li
                p 確認
            li
                p 完了

    .cart-items-wrapper.smaller-font
        p
            span.title-with-underline YOUR CART ▼
        
        -if @total_price_of_cart_items 
            -@cart_items.each do |cart_item|
                =render partial: "items/item_cards_c", locals: { cart_item: cart_item, color_name_to_send: cart_item.sku.item_color.color_name, editable: true}

            .price-box
                .price-record
                    .title-part 商品合計
                    .price-part =@total_price_of_cart_items
        -else
            p カートにアイテムが入っていません
    
    .cart-btn-wrapper.smaller-font
        .btn.still-shop =link_to "買い物を続ける ◀︎", root_path
        -if @cart_items.present?
            .btn.go-payment =link_to "▶︎ レジへ進む", new_order_path

                

        

        